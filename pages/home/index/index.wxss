  border-bottom:4rpx solid #fff; 
}
.tabNav>.cur{
  border-bottom:4rpx solid #f31d54; 
  color: #f31d54;
}
.img-box{
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
  border-radius: 10rpx;
  position: relative;
  margin-right: 20rpx;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.img-box .mark{
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  width: 120rpx;
  height: 50rpx;
  background: rgba(7, 111, 238, .7);
  border-bottom-right-radius: 10rpx;
}
.tabNav-inner .til{
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin-bottom: 5rpx;
}
.tabNav-inner .tils{
  color: #666;
  font-size: 24rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.tabNav-inner .txt{
  font-size: 24rpx;
  color: #666;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.tabNav-inner .txt text{
  color: #000;
 }
 .tabNav-inner .txt .sp text{
   font-weight:bold;
