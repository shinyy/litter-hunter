.search-row{
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  background: #fff;
  /* margin-bottom: 10rpx; */
  z-index: 999
  
}
.search-bg{
  width: 710rpx;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 60rpx;
  padding-left: 20rpx;
  box-sizing: border-box;

}
.search-ico{
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
}
.search-bg input{
  font-size: 26rpx;
}
.cancel{
  width: 110rpx;
  font-size: 30rpx;
  color: #323233;
  text-align: center;
}
.local-row{
  background: #fff;
  height:80rpx;
  padding-left:20rpx;
}
.local-ico{
  width:20rpx;
  height: 30rpx;
  margin-right: 18rpx;
}
.now-local{
  font-size:26rpx;
  color:#323233;
}
.dt{
  height: 60rpx;
  color: #969699;
  padding-left: 20rpx;
  font-size:24rpx;
  line-height: 60rpx;
  background: #f5f5f5;
}
.li{
  padding-left:20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  font-size:24rpx;
  color:#323233;
}
.li.cur{
  color:#f31d53
}
.index{
  position:fixed;
  right:20rpx;
  top: 50%;
  margin-top:-350rpx;
}
.index view{
  font-size: 20rpx;
  color: #646466;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
}
.body{
  height: 100%;
  top: 80rpx;
  position: absolute;
  /* padding-top:80rpx;  */
  box-sizing: border-box;
}
.search-box{
  position: fixed;
  width: 100%;
  height:100%;  
  /* height:calc(100vh-90rpx); */
  background: #fff;
  top: 90rpx;
  left: 0;
}
.tab{
  height: 90rpx;
  background: #fff;
  width: 100%;
}
.tab>view{
  height: 86rpx;
  line-height: 86rpx;
  border-bottom:4rpx solid #fff;
  width: 210rpx;
  text-align: center;
  font-size: 28rpx;
  margin:0 88rpx;
}
.tab>.cur{
  color: #f31d53;
  border-bottom:4rpx solid #f31d53 ;
}
.hot{
  overflow: hidden;
  padding-top: 10rpx;
}
.hot>view{
  width:200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #fff;
  float: left;
}