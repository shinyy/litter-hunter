/* pages/release/industry/industry.wxss */
page{
  padding-bottom: 0;
}
.left-part{
  position: absolute;
  top: 0;
  left: 0;
  width: 330rpx;
  height: 100%;
  z-index: 999;
  background: #f5f5f5;
}
.left-part>view,.left-part .list{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding-left: 47rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.left-part>.cur,.left-part .list.cur{
  background: #fff;
}
.right-part{
  position: absolute;
  top: 0;
  left: 0;
  padding-left: 390rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.right-part>view,.right-part .list{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
}
.right-part>.cur,.right-part .list.cur{
  color: #f31d53;
}