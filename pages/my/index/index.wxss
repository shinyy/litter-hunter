/* pages/my/index.wxss */
page{background-color:#f5f5f5;}
.top{
  height: 240rpx;
  position: relative;
  margin-bottom: 100rpx;
}
.top>image{
  width: 100%;
  height: 240rpx;
}
.user-block{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  top: 0;
  left: 0;
  color: #fff;
}
.user-img{
  overflow: hidden;
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  border:4rpx solid #fff;
  margin-right: 16rpx;
}
.user-img image{
  width: 108rpx;
  height: 108rpx;
}
.my-con{
  width: 710rpx;
  height: 118rpx;
  background: #fff;
  border-radius: 16rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left:-355rpx;
  box-shadow:1rpx 1rpx 30rpx rgba(0,0,0,.1);
  padding: 0 30rpx;
  box-sizing: border-box;
}
.my-con view text:nth-child(1){
  color: #666;
  font-size: 28rpx;
  margin-right: 11rpx;
}
.txt>view:nth-child(1){
  font-size: 34rpx;
  margin-bottom: 15rpx;
}
.txt>view:nth-child(2){
  font-size: 30rpx;
}
.arr-right1{
  width: 14rpx;
  height: 24rpx;
}
.my-con view text:nth-child(2){
  color: #f31d53;
  font-size: 40rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
}
.my-con navigator:nth-child(2){
  color: #f31d53;
  width: 128rpx;
  height: 44rpx;
  border: 2rpx solid #f31d53;
  border-radius: 44rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 44rpx;
  margin-right: 15rpx;
}
.my-con navigator:nth-child(3){
  color: #fff;
  background: #f31d53;
  width: 128rpx;
  height: 44rpx;
  border: 2rpx solid #f31d53;
  border-radius: 44rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 44rpx;
}
.swiper-banner image{
  width: 640rpx;
  height: 180rpx;
  display: block;
  margin: 0 auto;
  border-radius: 10rpx;
}
.swiper-banner{
  height: 180rpx;
  margin-bottom: 20rpx;
}
.swiper-banner swiper-item{
  width: 650rpx !important;
}
.nav-row{
  background: #fff;
  width: 710rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow:1rpx 1rpx 30rpx rgba(0,0,0,.1);
}
.nav-row navigator,.nav-row>view{
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  color: #333;
  font-size: 28rpx;
}
.icon{
  width: 28rpx;
  height: 28rpx;
  margin-right: 30rpx;
}